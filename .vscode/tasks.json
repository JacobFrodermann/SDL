{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++-9 build active file ver(1)",
        "command": "/usr/bin/g++",
        "args": [
          "-std=c++17",
          "-I/usr/include/SDL2",
          "-Wall",
          "-L/usr/lib",
          "-lSDL2",
          "-lSDL2_image",
          "-I${workspaceFolder}/*",
          "-g",
          "${workspaceFolder}/src/*.cpp",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "compiler: /usr/bin/g++"
      }
    ]
  }
  